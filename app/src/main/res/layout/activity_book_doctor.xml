<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.BookDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FB1403"
            app:title="Booking Doctor's Appointment"
            app:titleTextColor="#fff" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Doctor Details"
            android:textColor="#000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_book"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_below="@+id/label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_account_circle"
            app:civ_border_color="@color/purple_700"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/tv_doc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_book"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Doctor Name"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc1"
            android:layout_marginLeft="60dp"
            android:text="Hospital Name:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_doc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc1"
            android:layout_marginLeft="230dp"
            android:text="Hospital Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc2"
            android:layout_marginLeft="60dp"
            android:text="Speciality:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_doc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc2"
            android:layout_marginLeft="180dp"
            android:text="Speciality"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc3"
            android:layout_marginLeft="60dp"
            android:text="Degree:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_doc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc3"
            android:layout_marginLeft="150dp"
            android:text="Degree"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc4"
            android:layout_marginLeft="60dp"
            android:text="Number:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_doc5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc4"
            android:layout_marginLeft="155dp"
            android:text="Number"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Patient Name:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edt_bg"
            android:hint="Enter Patient's Name"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#95000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Mobile Number:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_num"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edt_bg"
            android:hint="Enter Patient's Mobile Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#95000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_doc7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_num"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Select Appointment's Date:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc7"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#ffffff"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/edt_e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edt_bg"
                android:hint="Select Date"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#86000000"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_calendar_month_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_doc6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Select Appointment's Time:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc6"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#ffffff"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/edt_e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edt_bg"
                android:hint="Select Time"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#86000000"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_access_time_24" />

        </androidx.cardview.widget.CardView>

        <android.widget.Button
            android:id="@+id/btn_book"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_bg"
            android:padding="15dp"
            android:text="Book"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>


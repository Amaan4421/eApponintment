<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:background="#C1BFBF"
    android:layout_marginTop="?attr/actionBarSize">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="114dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:src="@drawable/ic_baseline_account_circle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_bg"
        android:elevation="200dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Email:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/card1"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_bg"
        android:elevation="200dp"
        app:cardCornerRadius="20dp"
        tools:ignore="DuplicateIds">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Username:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/card2"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_bg"
        android:elevation="200dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Mobile Number:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card3"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_bg"
        android:elevation="200dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Date of Birth:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="130dp"
            android:imeOptions="actionDone"
            android:text="Enter your Birth-Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card4"
        android:layout_marginTop="5dp"
        android:id="@+id/card5"
        android:elevation="200dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/edt_bg">

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:text="Blood Group:"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/text5_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginLeft="125dp"
        android:text="Enter your Blood group"
        android:imeOptions="actionDone"
        android:textColorHint="#90000000"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card5"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_bg"
        android:elevation="200dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Address:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginLeft="90dp"
            android:imeOptions="actionDone"
            android:text="Enter your Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#90000000"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>



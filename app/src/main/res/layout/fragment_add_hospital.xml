<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddDoctorFragment"
    android:background="#C1BFBF"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Admin Panel(Add Hospital)"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h1"
        android:layout_marginTop="25dp"
        android:background="@drawable/edt_bg"
        android:elevation="400dp"
        app:cardBackgroundColor="#B2FB0303"
        app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:padding="20dp"
        android:text="Hospital Name:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:layout_marginLeft="150dp"
        android:padding="20dp"
        android:hint="Enter Hospital name"
        android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginTop="15dp"
        android:background="@drawable/edt_bg"
        android:elevation="400dp"
        app:cardBackgroundColor="#B2FB0303"
        app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h2"
        android:padding="20dp"
        android:text="Hospital Number:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h2"
        android:layout_marginLeft="160dp"
        android:inputType="number"
        android:padding="20dp"
        android:hint="Enter Hospital Number"
        android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card2"
        android:layout_marginTop="15dp"
        android:background="@drawable/edt_bg"
        android:elevation="400dp"
        app:cardBackgroundColor="#B2FB0303"
        app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h4"
        android:padding="20dp"
        android:text="Hospital Email:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h4"
        android:padding="20dp"
        android:layout_marginLeft="140dp"
        android:hint="Hospital Email"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card3"
        android:layout_marginTop="15dp"
        android:background="@drawable/edt_bg"
        android:elevation="400dp"
        app:cardBackgroundColor="#B2FB0303"
        app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/t8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t6"
        android:padding="20dp"
        android:text="Hospital Address:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Hospital Address"
        android:id="@+id/t9"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@+id/t6"
        android:layout_marginLeft="170dp"/>

    </androidx.cardview.widget.CardView>

    <android.widget.Button
        android:id="@+id/addHospital"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:padding="20dp"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>

</RelativeLayout>
